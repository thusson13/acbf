<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/min_list_item_height"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:src="@drawable/beer" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
			android:layout_height="wrap_content"
            android:padding="5dp"
            android:gravity="center_vertical"
            android:text="Anderson Valley Wild Turkey Bourbon Barrel Stout"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/type_abv"
            android:layout_width="wrap_content"
         	android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:text="American Stout - 6.90%"
            android:textSize="16sp" />
    </LinearLayout>
    
    <LinearLayout
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:orientation="vertical"
    	android:layout_gravity="center_vertical">
        
        <TextView
            android:id="@+id/personal_scores"
            android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
         	android:gravity="center_vertical"
         	android:text="1 / 0"
            android:textSize="16sp" />
        
        <TextView
            android:id="@+id/overall_scores"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
			android:gravity="center_vertical"
            android:text="2 / 4"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>
